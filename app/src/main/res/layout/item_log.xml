<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_project"
        android:text=""
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text=""
        android:paddingStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_account"
        android:text=""
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tv_project"
        app:layout_constraintBottom_toBottomOf="@id/tv_project"
        app:layout_constraintStart_toEndOf="@id/tv_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_content"
        tools:text="jfaopsdjifaoipsdfjadiosfjaiosdfjaiosdpfjaiosdfjaiodfjaiodsfjaiosdfjaiodsfjaosdipfjoadsf"
        android:textSize="11sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_account"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/tv_time"
        app:layout_constraintTop_toTopOf="@id/tv_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_time"
        android:textSize="10sp"
        tools:text="11分钟前"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_project"
        app:layout_constraintBottom_toBottomOf="@id/tv_project"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>