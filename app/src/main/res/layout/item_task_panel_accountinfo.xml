        <TextView
            android:id="@+id/tv_value"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0xjfad0xjfad0xjfad0xjfad..."
            android:textColor="#1A1A1A"
            android:textSize="12sp"
