<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center_vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tv_serial"
            tools:text="1"
            android:textStyle="bold"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_address"
            tools:text="0x234jfpaoiuasdfjaodfijasdoifjasodifjasdiofjadsoi"
            android:textSize="15sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_serial"
            app:layout_constraintBottom_toBottomOf="@id/tv_serial"
            app:layout_constraintStart_toEndOf="@id/tv_serial"
            app:layout_constraintEnd_toStartOf="@id/iv_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_copy"
            android:src="@drawable/baseline_content_copy_24"
            app:layout_constraintTop_toTopOf="@id/tv_serial"
            app:layout_constraintBottom_toBottomOf="@id/tv_serial"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_register_state"
            android:text="isRegister:false"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:paddingStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_light_node"
            android:text="Lightnode:Stop"
            android:textStyle="bold"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_register_state"
            app:layout_constraintBottom_toBottomOf="@id/tv_register_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>